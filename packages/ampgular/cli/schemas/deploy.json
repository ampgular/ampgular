{
  "$schema": "http://json-schema.org/schema",
  "title": "Deploy Config",
  "description": "Deploy Configuration Configuration",
  "type": "object",
  "properties": {
    "targetApp": {
      "type": "string",
      "enum": ["spa", "prerender", "ssr"]
    },
    "amp":{
      "type":"boolean",
      "default":false
    },
    "sitemap": {
      "type": "boolean"
    },
    "serve": {
      "type": "boolean",
      "default":false
    },
    "robots": {
      "type": "boolean"
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "from": {
            "type": "string"
          },
          "to": {
            "type": "string"
          }
        },
        "required": ["from", "to"]
      }
    }
  },
  "required": ["robots", "sitemap", "files","targetApp","amp"]
}
